

@model WOM3.Models.User

@{

    Layout = null;
    ViewBag.Title = "Register";
}

@Scripts.Render("~/bundles/modernizr")

<style>
    label > input{ 
  visibility: hidden; 
  position: absolute; 
}
label > input + img{
  cursor:pointer;
  border:2px solid transparent;
}
label > input:checked + img{ 
  border:2px solid #f00;
}

.reg
{

	color: white;
	height:100%; 
	width: 100%;
	font-size: 170%; 
	font-weight: 900; 
	font-family: 'MedievalSharp'; 
	margin-left:auto; 
	margin-right:auto; 
	margin-top: 80%;
    margin-bottom:2%;

}
</style>

<link rel="stylesheet" type="text/css" href="~/Content/coverstyle.css">

<link rel="stylesheet" type="text/css" href="~/Content/lay.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<body>
    <div class="womslika">
        <div class="col-md-4" style="min-width: 25%; margin-top: 5%">
        </div>
        <div class="col-md-4" style="height:83%">
            <div class="reg" style="width:100%;margin-top:70%;margin-bottom:2%;background-image: url('http://localhost:5611/Images/scroll.png'); background-size: 100% 100%;
	background-repeat: no-repeat; background-origin: content-box;">
                <div style="padding:5%">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-4">
                                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2 ", @style = "color:red" })
                                    </div>
                                    <div class="col-md-7">
                                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger col-md-12",@style="font-size:80%" })
                                        @ViewBag.Error
                                    </div>
                                </div>

                            <div class="form-group">
                                @Html.HiddenFor(model => model.Email)
                            </div>

                            <div class="form-group">
                                <div class="col-md-4">
                                    @Html.LabelFor(model => model.Pass, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:red" })
                                    </div>
                                
                                    <div class="col-md-7">
                                        @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                                        @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger col-md-12 " ,@style = "font-size:80%" })
                                    </div>
                                </div>

                            <div class="form-group">
                                <div class="col-md-4">
                                    @Html.LabelFor(model => model.Avatar, htmlAttributes: new { @class = "control-label col-md-2" ,@style="color:red" })
                                    </div>
                                    <div class="col-md-7">

                                        <div class="chose-thumb" style="width:100%">
                                            
                                                <label style="float:left"><input type="radio" name="Avatar" value="1.png"><img src="~/images/1.png" width="50" height="50"/></label>
                                                <label style="float:left"><input type="radio" name="Avatar" value="2.png"><img src="~/images/2.png" width="50" height="50" /></label>
                                                <label style="float:left"><input type="radio" name="Avatar" value="8.png"><img src="~/images/8.png"  width="50" height="50" /></label>
                                                <label style="float:left"><input type="radio" name="Avatar" value="9.png"><img src="~/images/9.png" width="50" height="50" /></label>
                                               
                                           
                                        </div>
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Avatar" data-valmsg-replace="true"></span>

                                        @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger col-md-12", @style = "font-size:80%" })
                                    </div>
                                </div>



                            <div class="form-group">
                                <div class="col-md-offset-8 col-md-4">
                                    <button type="submit" class="btn btn-primary btn-success"><span class="glyphicon glyphicon-plus"></span> Register</button>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
        <div class="col-md-4" style="min-width: 25%; margin-top: 5%">
        </div>
    </div>
</body>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
