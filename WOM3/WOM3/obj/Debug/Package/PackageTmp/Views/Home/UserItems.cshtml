@model PagedList.IPagedList<WOM3.Models.UserItems>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<table class="table">
    <caption>
        <h3><strong> Itemi u posedu ! </strong> </h3>
    </caption>
    <tr style="background-color:#555">
        <th>
            Image
        </th>
        <th>
            Health
        </th>
        <th>
            Mana
        </th>
        <th>
            Armor
        </th>
        <th>
            HealthReg
        </th>
        <th>
            ManaReg
        </th>
        <th>
            Demage
        </th>
        <th>
            Price
        </th>
        <th>
            Spell
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Url.Content("~/Images/"+item.Item.Image)" width="40" height="40" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Health)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Mana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Armor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.HealthReg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.ManaReg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Demage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Price)
            </td>
            @if (item.Item.Spell != null)
            {
                <td style="background-color:#808080;color:white">
                    Dmg: @Html.DisplayFor(modelItem => item.Item.Spell.Demage)
                    Area:  @Html.DisplayFor(modelItem => item.Item.Spell.Area)
                </td>
            }

        </tr>
    }
</table>

 Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Profiles",
    new { id=ViewBag.Username, page=page }))
